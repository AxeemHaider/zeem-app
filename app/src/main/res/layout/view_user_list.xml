<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/universal_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivUserPic"
                android:layout_width="@dimen/icon_high_width_height"
                android:layout_height="@dimen/icon_high_width_height" />

            <ImageView
                android:id="@+id/ivUserBadge"
                android:layout_width="@dimen/badge_width_height"
                android:layout_height="@dimen/badge_width_height"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginStart="-10dp"
                app:srcCompat="@drawable/shape_badge_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/tvUserFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_size_small"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>