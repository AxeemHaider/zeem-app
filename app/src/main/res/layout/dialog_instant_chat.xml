<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/universal_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_high"
        android:text="@string/chat_request_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/universal_padding"
        android:textColor="@color/colorSecondaryText"
        android:text="@string/chat_request_detail"/>


    <Switch
        android:id="@+id/switchChatIdentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/universal_padding"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:text="Hide your identity    " />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnChatCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:text="Cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorDivider"/>

        <Button
            android:id="@+id/btnChatRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:text="Chat Request"/>

    </LinearLayout>

</LinearLayout>