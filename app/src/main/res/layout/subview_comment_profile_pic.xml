<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCommentProfilePic"
            android:layout_width="@dimen/icon_high_width_height"
            android:layout_height="@dimen/icon_high_width_height" />

        <ImageView
            android:id="@+id/ivCommentUserBadge"
            android:layout_width="@dimen/badge_width_height"
            android:layout_height="@dimen/badge_width_height"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginStart="-10dp"
            app:srcCompat="@drawable/shape_badge_dark" />

    </LinearLayout>

</merge>