<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btnReport"
        style="@style/ContextMenuButton"
        android:text="REPORT"
        android:textColor="@color/btn_context_menu_text_red" />

    <Button
        android:id="@+id/btnShowOnProfile"
        style="@style/ContextMenuButton"
        android:text="SHOW ON PROFILE"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnRemoveTag"
        style="@style/ContextMenuButton"
        android:text="UN TAG ME"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnHidePost"
        style="@style/ContextMenuButton"
        android:text="HIDE POST" />

    <Button
        android:id="@+id/btnSavePost"
        style="@style/ContextMenuButton"
        android:text="SAVE POST" />

    <Button
        android:id="@+id/btnDeletePost"
        style="@style/ContextMenuButton"
        android:text="DELETE POST"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/ContextMenuButton"
        android:text="CANCEL" />

</merge>