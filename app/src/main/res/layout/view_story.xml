<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flStoryLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivsProfilePic"
            android:layout_width="@dimen/icon_high_width_height"
            android:layout_height="@dimen/icon_high_width_height"/>

        <ImageView
            android:id="@+id/ivsUserBadge"
            android:layout_width="@dimen/badge_width_height"
            android:layout_height="@dimen/badge_width_height"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            app:srcCompat="@drawable/shape_badge_dark" />

        <TextView
            android:id="@+id/tvsUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_small"
            android:maxLength="7"
            android:ellipsize="end" />

    </LinearLayout>


</FrameLayout>